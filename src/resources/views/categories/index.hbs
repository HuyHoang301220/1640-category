<div class="mt-4">
  <a href="/categories/create" class="btn btn-outline-secondary"><i
      class="fa-solid fa-circle-plus"
    ></i>
    Add Category</a>
  <div class="mt-4">

    <div class="list-group">
      {{#each categories}}
        <a
          href="#"
          class="list-group-item list-group-item-action"
        >{{this.categoryName}}( {{this.description}} ) </a>
      {{/each}}
    </div>
  </div>
</div>